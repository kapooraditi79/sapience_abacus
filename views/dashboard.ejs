<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Practice Dashboard - Priya</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <!-- Sidebar -->
    <div id="sidebarMenu"
        class="fixed top-0 left-0 w-64 h-full bg-white shadow-xl z-50 sidebar-transition transform -translate-x-full">
        <div class="p-4 space-y-4">
            <a href="/dashboard" class="block px-3 py-2 text-gray-800 hover:bg-blue-100 rounded">Dashboard</a>
            <a href="/leaderboard" class="block px-3 py-2 text-gray-800 hover:bg-blue-100 rounded">Leaderboard</a>
            <a href="/levels" class="block px-3 py-2 text-gray-800 hover:bg-blue-100 rounded">All Levels</a>
            <a href="/profile" class="block px-3 py-2 text-gray-800 hover:bg-blue-100 rounded">Profile</a>
            <a href="/fee" class="block px-3 py-2 text-gray-800 hover:bg-blue-100 rounded">Fee Page</a>
        </div>
    </div>

    <!-- Overlay (hidden by default) -->
    <div id="overlay" class="fixed inset-0 z-40 bg-black bg-opacity-50 hidden" onclick="hideSidebar()"></div>

    <!-- Main Content -->
    <div class="flex flex-col min-h-screen">
        <!-- Full-width Header with left-aligned elements -->
        <header class="w-full bg-white shadow-md">
            <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
                <!-- Left Section: Menu Icon + Logo (shifted left with reduced padding) -->
                <div class="flex items-center space-x-2 pl-0"> <!-- Changed space-x-4 to space-x-2 and added pl-0 -->
                    <!-- Hamburger Menu Icon -->
                    <button onclick="toggleSidebar()" class="focus:outline-none">
                        <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" stroke-width="2"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>

                    <!-- Logo + Brand Name -->
                    <div class="flex items-center space-x-2">
                        <img src="/public/images/Logo.png" alt="Logo" class="w-8 h-8">
                        <span class="text-green-700 font-semibold text-lg">Sapience Abacus</span>
                    </div>
                </div>

                <!-- Right Section: User Info -->
                <div class="flex items-center space-x-2">
                    <span class="text-gray-800 font-medium">Aryan Sharma</span>
                    <img src="https://i.pravatar.cc/40?img=8" alt="Profile" class="w-9 h-9 rounded-full">
                </div>
            </div>
        </header>

        <!-- Rest of your content remains exactly the same -->
        <!-- Page Content -->
        <div class="max-w-6xl mx-auto px-6 py-8 flex-grow space-y-8">
            <!-- Student Name Below Header -->
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-100">
                <h1 class="text-2xl font-bold text-gray-800">Welcome back, Aryan Sharma</h1>
            </div>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Points Earned -->
                <div
                    class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-blue-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="w-6 h-6 text-blue-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-3xl font-bold text-gray-900">150</div>
                            <div class="text-gray-500">Points Earned</div>
                        </div>
                    </div>
                </div>

                <!-- Current Level -->
                <div
                    class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-indigo-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="w-6 h-6 text-indigo-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M8 10h.01M12 10h.01M16 10h.01M9 16h6M4 6h16M4 6v12a2 2 0 002 2h12a2 2 0 002-2V6" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-3xl font-bold text-gray-900">Level 3</div>
                            <div class="text-gray-500">Current Level</div>
                        </div>
                    </div>
                </div>

                <!-- Days Practiced -->
                <div
                    class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-amber-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="w-6 h-6 text-amber-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-3xl font-bold text-gray-900">8</div>
                            <div class="text-gray-500">Days Practiced</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Daily Practice Progress -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-6 rounded-2xl shadow-lg">
                <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                    <div class="text-white">
                        <h3 class="text-xl font-semibold">Daily Practice Streak ðŸ”¥</h3>
                        <p class="opacity-90">Current streak: 8 days</p>
                    </div>
                    <div class="w-full md:w-48">
                        <div class="h-3 bg-white/20 rounded-full">
                            <div class="w-3/4 h-full bg-white rounded-full transition-all duration-500"></div>
                        </div>
                        <p class="text-white text-sm mt-2 text-right">75% to next milestone</p>
                    </div>
                </div>
            </div>

            <!-- Practice Actions -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Start Practice -->
                <button onclick="window.location.href='/dictation.html'"
                    class="group flex items-center justify-between p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Start New Practice</h3>
                        <p class="text-gray-500 text-sm">Begin a fresh learning session</p>
                    </div>
                    <div class="p-3 bg-blue-100 rounded-lg group-hover:bg-blue-200 transition-colors">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </div>
                </button>

                <!-- Replace the Dictation Practices section in your dashboard with this: -->
                <a href="/dictation-practice"
                    class="group flex items-center justify-between p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
                    <!-- button content -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Dictation Practices</h3>
                        <p class="text-gray-500 text-sm">Explore all practice categories</p>
                    </div>
                    <div class="p-3 bg-purple-100 rounded-lg group-hover:bg-purple-200 transition-colors">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </div>
                </a>

                <!-- Recent Activity -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="p-6 border-b border-gray-100">
                        <h3 class="text-lg font-semibold">Recent Activity</h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr class="text-left text-sm text-gray-500">
                                    <th class="px-6 py-3 font-medium">Date</th>
                                    <th class="px-6 py-3 font-medium">Activity</th>
                                    <th class="px-6 py-3 font-medium">Score</th>
                                    <th class="px-6 py-3 font-medium">Time Spent</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4">June 14, 2024</td>
                                    <td class="px-6 py-4 font-medium">Mental Calculation</td>
                                    <td class="px-6 py-4">
                                        <span
                                            class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-sm">95/100</span>
                                    </td>
                                    <td class="px-6 py-4 text-gray-500">25 mins</td>
                                </tr>
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4">June 13, 2024</td>
                                    <td class="px-6 py-4 font-medium">Number Sequencing</td>
                                    <td class="px-6 py-4">
                                        <span
                                            class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">80/100</span>
                                    </td>
                                    <td class="px-6 py-4 text-gray-500">30 mins</td>
                                </tr>
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4">June 12, 2024</td>
                                    <td class="px-6 py-4 font-medium">Ablation Training</td>
                                    <td class="px-6 py-4">
                                        <span
                                            class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">100/100</span>
                                    </td>
                                    <td class="px-6 py-4 text-gray-500">20 mins</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Competition Practice -->
                <div class="space-y-6">
                    <h2 class="text-2xl font-bold text-gray-800">Competition Practice</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- National -->
                        <div
                            class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                            <div class="flex items-start justify-between mb-4">
                                <div>
                                    <h3 class="text-lg font-semibold">National Level</h3>
                                    <p class="text-sm text-gray-500">Compete with top students nationwide</p>
                                </div>
                                <span class="px-3 py-1 bg-blue-100 text-blue-600 text-sm rounded-full">Level 3</span>
                            </div>
                            <button onclick="window.location.href='dictation.html?type=competition&level=national'"
                                class="w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                                Start Practice
                            </button>
                        </div>

                        <!-- Regional -->
                        <div
                            class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                            <div class="flex items-start justify-between mb-4">
                                <div>
                                    <h3 class="text-lg font-semibold">Regional Level</h3>
                                    <p class="text-sm text-gray-500">Focus on local competition strategies</p>
                                </div>
                                <span class="px-3 py-1 bg-purple-100 text-purple-600 text-sm rounded-full">Level
                                    2</span>
                            </div>
                            <button onclick="window.location.href='dictation.html?type=competition&level=regional'"
                                class="w-full bg-purple-600 text-white py-3 rounded-lg font-medium hover:bg-purple-700 transition-colors">
                                Start Practice
                            </button>
                        </div>

                        <!-- Zonal -->
                        <div
                            class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                            <div class="flex items-start justify-between mb-4">
                                <div>
                                    <h3 class="text-lg font-semibold">Zonal Level</h3>
                                    <p class="text-sm text-gray-500">Sharpen your skills for zonal events</p>
                                </div>
                                <span class="px-3 py-1 bg-orange-100 text-orange-600 text-sm rounded-full">Level
                                    1</span>
                            </div>
                            <button onclick="window.location.href='dictation.html?type=competition&level=zonal'"
                                class="w-full bg-orange-500 text-white py-3 rounded-lg font-medium hover:bg-orange-600 transition-colors">
                                Start Practice
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const sidebar = document.getElementById("sidebarMenu");
        const overlay = document.getElementById("overlay");

        function showSidebar() {
            sidebar.classList.remove("-translate-x-full");
            overlay.classList.remove("hidden");
            document.body.style.overflow = "hidden";
        }

        function hideSidebar() {
            sidebar.classList.add("-translate-x-full");
            overlay.classList.add("hidden");
            document.body.style.overflow = "auto";
        }

        function toggleSidebar() {
            if (sidebar.classList.contains("-translate-x-full")) {
                showSidebar();
            } else {
                hideSidebar();
            }
        }

        // Close sidebar when clicking outside
        overlay.addEventListener("click", hideSidebar);
    </script>
</body>

</html>